{
  "name": "berthcare-backend",
  "version": "1.0.0",
  "description": "BerthCare backend API server",
  "main": "dist/index.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "lint": "eslint \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,js,json}\" \"eslint.config.js\" \"README.md\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\" \"eslint.config.js\" \"README.md\"",
    "test": "jest",
    "test:unit": "jest --runInBand",
    "test:integration": "jest --testMatch \"**/__tests__/**/*.integration.ts\" --passWithNoTests",
    "prisma:generate": "prisma generate",
    "prisma:validate": "prisma validate"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jest": "^29.5.12",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.11.6",
    "eslint": "^9.39.1",
    "fast-check": "^3.23.2",
    "globals": "^16.5.0",
    "jest": "^29.7.0",
    "prisma": "^7.0.1",
    "prettier": "^3.6.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0"
  },
  "dependencies": {
    "@prisma/client": "^7.0.1",
    "@prisma/adapter-pg": "^7.0.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "pg": "^8.13.1"
  }
}
