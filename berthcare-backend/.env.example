# Database connection string for PostgreSQL
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=

# Server port (default: 3000)
PORT=3000

# Node environment (development, production, test)
NODE_ENV=development

# Logging configuration
# LOG_LEVEL: log level (debug, info, warn, error). Defaults to "info" in production.
LOG_LEVEL=debug
# LOG_DESTINATION: stdout | datadog (default: stdout)
LOG_DESTINATION=stdout
# SERVICE_NAME: service identifier included in log metadata
SERVICE_NAME=berthcare-backend
# ALLOW_EPHEMERAL_HOSTNAMES: true to include ephemeral hostnames in log stream names (default: false)
ALLOW_EPHEMERAL_HOSTNAMES=false

# Auth / security
# JWT_* values control signing/validation; set strong secrets in non-dev environments.
JWT_SECRET=change-me-in-dev
JWT_ISSUER=berthcare-backend
JWT_AUDIENCE=berthcare-mobile
# Access token TTL in seconds (default: 24h)
JWT_ACCESS_TTL=86400
# Refresh token TTL in seconds (default: 30d)
JWT_REFRESH_TTL=2592000
# Bcrypt salt rounds (default: 10)
BCRYPT_SALT_ROUNDS=10

# CloudWatch (used via ECS awslogs by default; SDK transport optional)
# CLOUDWATCH_LOG_GROUP: log group name (default: berthcare-backend)
# CLOUDWATCH_REGION: AWS region for CloudWatch logs
CLOUDWATCH_LOG_GROUP=berthcare-backend
CLOUDWATCH_REGION=ca-central-1

# Datadog transport (optional; use agent when available)
# DATADOG_API_KEY: required when sending directly via HTTP intake
# DATADOG_SITE: datadoghq.com, datadoghq.eu, etc. (default: datadoghq.com)
DATADOG_API_KEY=
DATADOG_SITE=datadoghq.com
# DATADOG_AGENT_URL: optional; preferred when using the Datadog agent (e.g., http://localhost:8126)
DATADOG_AGENT_URL=

# Request logging toggle (leave enabled in most cases)
LOG_ENABLE_REQUEST_LOGS=true
