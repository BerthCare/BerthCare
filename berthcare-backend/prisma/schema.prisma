generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum CaregiverRole {
  caregiver
  coordinator
}

enum ScheduleStatus {
  scheduled
  completed
  cancelled
}

enum SyncStatus {
  local
  syncing
  synced
  conflict
}

enum PhotoSyncStatus {
  local
  uploading
  synced
  failed
}

enum ActorType {
  caregiver
  coordinator
  system
}

enum ConsentType {
  photo
  documentation
  location
}

model Caregiver {
  id             String        @id @default(uuid())
  email          String        @unique
  name           String
  phone          String
  organizationId String
  role           CaregiverRole
  isActive       Boolean
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  schedules      Schedule[]
  visits         Visit[]

  @@index([email])
}

model Client {
  id               String   @id @default(uuid())
  name             String
  photoUrl         String?
  address          String
  phone            String?
  emergencyContact String?
  organizationId   String
  isActive         Boolean
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  schedules        Schedule[]
  visits           Visit[]
}

model Schedule {
  id              String          @id @default(uuid())
  caregiverId     String
  clientId        String
  scheduledDate   DateTime        @db.Date
  scheduledTime   DateTime        @db.Time(6)
  durationMinutes Int
  status          ScheduleStatus
  completedAt     DateTime?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  caregiver       Caregiver       @relation(fields: [caregiverId], references: [id])
  client          Client          @relation(fields: [clientId], references: [id])
  visit           Visit?

  @@index([caregiverId, scheduledDate])
}

model Visit {
  id                String       @id @default(uuid())
  scheduleId        String       @unique
  caregiverId       String
  clientId          String
  visitDate         DateTime     @db.Date
  startTime         DateTime?    @db.Time(6)
  endTime           DateTime?    @db.Time(6)
  documentation     Json
  photoIds          String[]
  location          Json?
  changedFields     String[]
  copiedFromVisitId String?
  syncStatus        SyncStatus
  syncedAt          DateTime?
  syncVersion       Int
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt

  schedule          Schedule     @relation(fields: [scheduleId], references: [id])
  caregiver         Caregiver    @relation(fields: [caregiverId], references: [id])
  client            Client       @relation(fields: [clientId], references: [id])
  copiedFrom        Visit?       @relation("VisitCopy", fields: [copiedFromVisitId], references: [id])
  copies            Visit[]      @relation("VisitCopy")
  photos            Photo[]

  @@index([clientId, visitDate])
}

model Photo {
  id                  String           @id @default(uuid())
  visitId             String
  clientId            String
  caregiverId         String
  localPath           String?
  s3Key               String?
  mimeType            String
  sizeBytes           Int
  compressedSizeBytes Int
  width               Int
  height              Int
  syncStatus          PhotoSyncStatus
  uploadedAt          DateTime?
  createdAt           DateTime         @default(now())

  visit               Visit            @relation(fields: [visitId], references: [id])
  caregiver           Caregiver        @relation(fields: [caregiverId], references: [id])
  client              Client           @relation(fields: [clientId], references: [id])
}
